@model IEnumerable<DMQuyetTien.Models.BangSanPham>

@{
    ViewBag.Title = "Index";
}

<h2>Danh Sách Sản Phẩm</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">Tạo sản phẩm</a>
</p>
<table class="table">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
           Tên sản phẩm
        </th>
        <th>
            Giá bán
        </th>
        <th>
           Giá gốc
        </th>
        <th>
            Giá góp
        </th>
        <th>
            Số lượng tồn
        </th>
        <th>
            Tên loại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaBan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaGoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaGop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongTon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoai)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })*@

            <a href="@Url.Action("Edit")" class="btn btn-info">Edit</a>
            <a href="@Url.Action("Details")" class="btn btn-warning">Details</a>
            <a href="@Url.Action("Delete")" class="btn btn-danger">Delete</a>
    
        </td>
    </tr>
}

</table>
